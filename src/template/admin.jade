extends common/layout.jade

block title
    title Admin

block custom_includes
    script(src="js/admin.js")

block content
    div
        h1 Hello Admin
        form(class="pure-form pure-form-aligned")
            fieldset
                legend Set up a new Medication record
                div.pure-control-group
                    label(for="name") Drug name
                    input(
                    ng-model="name"
                    type="text"
                    placeholder="eg. Vitamin C"
                    )#name
                div.pure-control-group
                    label(for="dosage") Dosage
                    input(
                    ng-model="dosage"
                    type="number"
                    placeholder="eg. 2"
                    )#dosage
                div.pure-control-group
                    label(for="unit") Unit
                    input(
                    ng-model="unit"
                    type="text"
                    placeholder="eg. Pill"
                    )#unit
                div.pure-controls
                    button(type="submit").pure-button.pure-button-primary Create record
